{
  "manifest_version": 2,

  "name": "Quick Gradesource",
  "version": "0.0.2",

  "browser_action": {
    "default_icon": "images/icon38.png",
    "default_title": "Quick Gradesource",      // optional; shown in tooltip
    "default_popup": "index.html"        // optional
  },

  "background": {
    "persistent": false,
    "scripts": ["jquery.min.js", "gradesource_scraper.js"]
  },

  "permissions": [
    "http://www.gradesource.com/*",
    "storage"
  ],

  "options_page": "options.html"
}
